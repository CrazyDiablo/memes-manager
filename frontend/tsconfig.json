{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "vite/client",
      "vite-plugin-svg-icons/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@p": [
        "src/public/*"
      ],
      "@a/*": [
        "src/assets/*"
      ],
      "@c": [
        "src/components"
      ],
      "@context": [
        "src/context"
      ],
      "@s": [
        "src/service"
      ],
      "@u": [
        "src/utils"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@enum": [
        "src/assets/js/enum.tsx"
      ],
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16"
    }
  },
}